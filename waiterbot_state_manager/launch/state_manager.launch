<launch>
  <!-- state manager -->
  <node pkg="waiterbot_state_manager" name="waiterbot_state_manager" type="state_manager_node.py">
    <!--
      Expected signal time for drink dispensing in seconds;
      Needs to be larger than VM's dispense signal time, see 'dispensed_signal_time' parameter in
      vending_machine_control/vending_machine.launch 
      -->
    <param name="vm_feedback_signal_duration" value="1.5" />

    <remap from="android_ui/drink_order" to="drink_order"/>
    <remap from="android_ui/drink_ar" to="drink_ar"/>
    <remap from="android_ui/drinks_dispensed" to="drinks_dispensed"/>
    <remap from="android_ui/tray_empty" to="tray_empty"/>
    <remap from="waiterbot_nav_control/goto" to="nav_ctrl_goto"/>
    <remap from="waiterbot_nav_control/status" to="nav_ctrl_status"/>
    <remap from="waiterbot_state_manager/debug" to="waiterbot_debug"/>
    <remap from="vm_feedback_proc/enable" to="colour_signal_node/enable"/>
    <remap from="vm_feedback_proc/result" to="colour_signal_node/result"/>
    <remap from="waiterbot_state_manager/order_cancelled" to="order_cancelled"/>
    <remap from="waiterbot_state_manager/debug" to="waiterbot_debug"/>
    <remap from="kobuki/digital_input_events" to="/mobile_base/events/digital_input"/>
  </node>
</launch>
