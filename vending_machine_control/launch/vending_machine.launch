<!-- Starts the vending machine setup -->
<launch>
  <!-- Interface to the Arduino used for the low-level control -->
  <node name="vending_machine" pkg="rosserial_python" type="serial_node.py" args="/dev/arduino_yun" required="true">
    <!-- Parameter values are time in milliseconds -->
    <param name="trigger_time" value="500"/>
    <param name="dispensing_time" value="8000"/>
    <param name="dispensed_signal_time" value="1000"/>
  </node>
  
  <!-- Action server interface for placing orders with the vending machine -->
  <node name="vending_machine_manager" pkg="vending_machine_control" type="vending_machine_manager.py">
    <remap from="arduino/drink_order" to="vending_machine/drink_order"/>
    <remap from="arduino/order_result" to="vending_machine/order_result"/>
    <!-- set available drink types (see vending_machine_control/DrinkType.msg for available options) -->
    <param name="drink1" value="1"/>
    <param name="drink2" value="3"/>
  </node>
</launch>